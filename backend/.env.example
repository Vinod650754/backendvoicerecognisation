# Backend Voice Authentication Server
# Deployment Configuration

# Server Settings
HOST=127.0.0.1
PORT=8000
RELOAD=false

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://10.0.2.2

# Audio Processing
TARGET_SAMPLE_RATE=16000
N_MELS=64
N_FFT=400
HOP_LENGTH=160

# Model Settings
WAKEWORD_CONFIDENCE_THRESHOLD=0.7
COMMAND_CONFIDENCE_THRESHOLD=0.7
VOICE_VERIFICATION_THRESHOLD=0.7

# Audio Validation
MIN_AUDIO_DURATION_SECONDS=0.5
MAX_AUDIO_DURATION_SECONDS=30
